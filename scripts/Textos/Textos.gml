function scr_textos(){
	switch npc_nome {
		case "Primeiro Texto":
			texto[0] = "Do you believe in Eorzea? Eorzea's unity is forged of falsehoods. Its city-states are built on deceit. And its faith is an instrument of deception.";
			texto[1] = "It is naught but a cobweb of lies. To believe in Eorzea is to believe in nothing.";
			texto[2] = "In Eorzea, the beast tribes often summon gods to fight in their stead--though your comrades only rarely respond in kind. Which is strange, is it not?";
			break;
	}
}